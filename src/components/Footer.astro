---
import Button from "./Button.astro";
import { Image } from "astro:assets";
import xlogo from "../assets/images/x-logo.webp";
import youtubelogo from "../assets/images/youtube-logo.webp";
import instagramlogo from "../assets/images/instagram-logo.webp";
import linkedinlogo from "../assets/images/linkedin-logo.webp";
import logo from "../assets/images/logo.webp";
import facebooklogo from "../assets/images/facebook-logo.webp";
---

<div
  class="flex flex-col md:flex-row justify-between p-6 mb-30 bg-black bg-opacity-75"
>
  <div class="flex flex-col gap-3 mb-10 md:mb-0">
    <a href="https://plasticchange.dk/">
      <Image class="max-w-32" src={logo} alt="Plastic Change logo" /></a
    >
    <p class="">
      <a href="mailto:info@plasticchange.org" target="_blank"
        >Mail: info@plasticchange.org</a
      >
      <br /> Tlf: +45 42 66 72 46 <br /> Telefontid. Mandag – Fredag, 10:00 – 15:00
    </p>
  </div>
  <div class="flex flex-col gap-3 mb-10 md:mb-0">
    <p><b>Skriv dig op til vores nyhedsbrev</b></p>
    <input type="text" id="name" name="name" placeholder="Dit navn" />
    <input type="email" id="email" name="email" placeholder="Din e-mail" />
    <Button>Skriv dig op</Button>
  </div>
  <div class="flex flex-col items-center justify-around h-20 mb-10 md:mb-0">
    <p><b>Find os på SoMe</b></p>
    <div class="w-56 flex justify-between">
      <a href="https://www.facebook.com/plasticchange/"
        ><Image src={facebooklogo} alt="Facebook-logo" class="w-6" /></a
      >
      <a href="https://www.x.com/plasticchange/"
        ><Image src={xlogo} alt="X-logo" class="w-6" /></a
      >
      <a href="https://www.instagram.com/plasticchange/"
        ><Image src={instagramlogo} alt="Instagram-logo" class="w-6" /></a
      >
      <a href="https://www.linkedin.com/company/plastic-change/"
        ><Image src={linkedinlogo} alt="LinkedIn-logo" class="w-6" /></a
      >
      <a href="https://www.youtube.com/channel/UCgLD-akVpdrJPPds2qoNA8g"
        ><Image src={youtubelogo} alt="YouTube-logo" class="w-6" /></a
      >
    </div>
  </div>
</div>
